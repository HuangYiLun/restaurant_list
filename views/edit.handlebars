<div class="container py-5">

  <div class="row">
    <div class="col-12 col-lg-10 col-xl-8 mx-auto">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">編輯餐廳</h5>
          <hr>
          <form method="POST" action="/restaurants/{{ restaurant._id }}?_method=PUT">
            <div class="row mb-3 g-2">
              <label for="name" class="col-md-4 col-form-label">
                中文名稱
              </label>
              <div class="col-md-8">
                <input type="text" name="name" class="form-control" id="name" value="{{ restaurant.name }}" required>
              </div>
            </div>

            <div class="row mb-3 g-2">
              <label for="name_en" class="col-md-4 col-form-label">
                英文名稱
              </label>
              <div class="col-md-8">
                <input type="text" name="name_en" class="form-control" id="name_en" value="{{ restaurant.name_en }}"
                  required>
              </div>
            </div>

            <div class="row mb-3 g-2">
              <label for="category" class="col-md-4 col-form-label">
                類別
              </label>
              <div class="col-md-8">
                <input type="text" name="category" class="form-control" id="category" list="categoryOptions"
                  value="{{ restaurant.category }}" required>
                <datalist id="categoryOptions">
                  <option value="中東料理"></option>
                  <option value="日本料理"></option>
                  <option value="義式餐廳"></option>
                  <option value="美式"></option>
                  <option value="酒吧"></option>
                  <option value="咖啡"></option>
                </datalist>
              </div>
            </div>

            <div class="row mb-3 g-2">
              <label for="image" class="col-md-4 col-form-label">
                圖片
              </label>
              <div class="col-md-8">
                <input type="url" name="image" class="form-control" id="image" value="{{ restaurant.image }}" required>
              </div>
            </div>

            <div class="row mb-3 g-2">
              <label for="location" class="col-md-4 col-form-label">
                地址
              </label>
              <div class="col-md-8">
                <input type="text" name="location" class="form-control" id="location" value="{{ restaurant.location }}"
                  required>
              </div>
            </div>

            <div class="row mb-3 g-2">
              <label for="phone" class="col-md-4 col-form-label">
                電話號碼
              </label>
              <div class="col-md-8">
                <input type="text" name="phone" class="form-control" id="phone" value="{{ restaurant.phone }}" required>
              </div>
            </div>

            <div class="row mb-3 g-2">
              <label for="google_map" class="col-md-4 col-form-label">
                google地圖網址
              </label>
              <div class="col-md-8">
                <input type="url" name="google_map" class="form-control" id="google_map"
                  value="{{ restaurant.google_map }}" required>
              </div>
            </div>

            <div class="row mb-3 g-2">
              <label for="rating" class="col-md-4 col-form-label">
                評分
              </label>
              <div class="col-md-8">
                <input type="number" name="rating" class="form-control" id="rating" min="0" max="5" step="0.1"
                  value="{{ restaurant.rating }}" required>
              </div>
            </div>

            <div class="row mb-3 g-2">
              <label for="description" class="col-md-4 col-form-label">
                介紹
              </label>
              <div class="col-md-8">
                <textarea name="description" id="description" class="form-control" cols="30" rows="5">
                  {{ restaurant.description }}
                </textarea>
              </div>
            </div>

            <div class="text-end">
              <button class="btn btn-success" type="submit">儲存</button>
              <a href="/">
                <button class="btn btn-secondary" type="button">返回</button>
              </a>
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>
</div>